---
extends: "default"

ignore:
  - ".ansible/*"
  - ".venv/*"

rules:
  braces:
    min-spaces-inside: 0
    max-spaces-inside: 1
  brackets:
    min-spaces-inside: 1
    max-spaces-inside: 1
  colons:
    max-spaces-before: 0
    max-spaces-after: 1
  comments:
    require-starting-space: true
    min-spaces-from-content: 1
  comments-indentation: "disable"
  empty-lines:
    max: 1
  indentation:
    spaces: 2
    indent-sequences: true
  key-duplicates: "enable"
  line-length:
    max: 120
    level: "warning"
  new-line-at-end-of-file: "enable"
  quoted-strings:
    quote-type: "double"
  trailing-spaces: "enable"
  octal-values:
    forbid-implicit-octal: true
    forbid-explicit-octal: true
  truthy: "disable"
